<!doctype html>

<link rel="stylesheet" type="text/css" href="{{ url_for('static',filename='bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ url_for('static',filename='font-awesome.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ url_for('static',filename='prettyPhoto.css') }}">
<link rel="stylesheet" type="text/css" href="{{ url_for('static',filename='main.css') }}">

<h1>Past 24 Hours</h1>

<ul class="list-group">
    {% for thread in current %}
    
    {% if (thread.views > 1500 or thread.replies > 40) and (thread.date.day == date.day) %}
    <li class="list-group-item">
        <span class="label label-default label-pill pull-xs-right">{{thread.replies}} Replies</span>
        <a href="{{thread.url}}"><h3>{{thread.title}}</h3></a>
    </li>
    {% endif %}

    {% endfor %}
    
</ul>








<h1>Older</h1>

<ul class="list-group">

    {% for thread in old %}

    {% if (thread.views > 1500 or thread.replies > 40)  and thread.date.day <= date.day-1 %}
    <li class="list-group-item">
        <span class="label label-default label-pill pull-xs-right">{{thread.replies}} Replies</span>
        <a href="{{thread.url}}">{{thread.title}}</a>
    </li>
    {% endif %}

    {% endfor %}

</ul>